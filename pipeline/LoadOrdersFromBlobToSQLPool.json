{
	"name": "LoadOrdersFromBlobToSQLPool",
	"properties": {
		"description": "LoadOrdersFromBlobToSQLPool",
		"activities": [
			{
				"name": "CopyOrdersFromBlobToSQLPool",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"wildcardFolderPath": "../orders",
							"wildcardFileName": "*.json",
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "SqlPoolSink",
						"writeBehavior": "Insert",
						"sqlWriterUseTableLock": false,
						"tableOption": "autoCreate"
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['id']"
								},
								"sink": {
									"name": "id",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['date']"
								},
								"sink": {
									"name": "date",
									"type": "DateTime"
								}
							},
							{
								"source": {
									"path": "$['value']"
								},
								"sink": {
									"name": "value",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['customer_id']"
								},
								"sink": {
									"name": "customer_id",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['product_id']"
								},
								"sink": {
									"name": "product_id",
									"type": "String"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "blob_orders_json_data",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ordersDataSQL",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}