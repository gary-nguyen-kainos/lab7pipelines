{
	"name": "LoadCustomersFromBlobToSQLPool",
	"properties": {
		"activities": [
			{
				"name": "Copy Customers XML to SQL",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "XmlSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "XmlReadSettings",
							"validationMode": "none",
							"namespaces": true
						}
					},
					"sink": {
						"type": "SqlPoolSink",
						"writeBehavior": "Insert",
						"sqlWriterUseTableLock": false,
						"tableOption": "autoCreate"
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['customers']['customer'][0]['id']"
								},
								"sink": {
									"name": "id",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['customers']['customer'][0]['person']['name']"
								},
								"sink": {
									"name": "name",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['customers']['customer'][0]['person']['lastname']"
								},
								"sink": {
									"name": "lastname",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['customers']['customer'][0]['person']['age']"
								},
								"sink": {
									"name": "age",
									"type": "Int16"
								}
							},
							{
								"source": {
									"path": "$['customers']['customer'][0]['address']['country']"
								},
								"sink": {
									"name": "country",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['customers']['customer'][0]['address']['city']"
								},
								"sink": {
									"name": "city",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['customers']['customer'][0]['address']['postcode']"
								},
								"sink": {
									"name": "postcode",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['customers']['customer'][0]['address']['street']"
								},
								"sink": {
									"name": "street",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['customers']['customer'][0]['address']['building']"
								},
								"sink": {
									"name": "building",
									"type": "String"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "blob_customers_xml_data",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "customersDataSQL",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}